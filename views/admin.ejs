<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CodeVault</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            max-width: 800px;
            margin: auto;
            background-color: #f4f4f4;
        }
        h1, h2 {
            color: #333;
        }
        .search-container {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        input[type="text"] {
            width: 70%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin-right: 5px;
        }
        button {
            padding: 10px 15px;
            font-size: 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        .entry-preview {
            margin-top: 20px;
            border: 1px solid #ccc;
            padding: 15px;
            background: white;
            border-radius: 5px;
            cursor: pointer;
            transition: box-shadow 0.3s;
        }
        .entry-preview:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .entry-preview h3 {
            margin: 0;
            color: #007bff;
        }
        .language-tag {
            background: #e2e6ea;
            border-radius: 3px;
            padding: 5px 10px;
            margin-right: 5px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <h1>CodeVault</h1>
    <div class="search-container">
        <form action="/" method="GET" style="flex: 1;">
            <input type="text" name="search" value="<%= searchQuery %>" placeholder="Search by title or language..." />
            <button type="submit">Search</button>
        </form>
        <a href="/publish"><button style="margin-left: 10px;">Publish New Code</button></a>
    </div>

    <div class="entries">
        <h2>Published Entries</h2>
        <% entries.forEach(function(entry) { %>
            <div class="entry-preview" onclick="window.location.href='/entry/<%= encodeURIComponent(entry.title) %>';">
                <h3><%= entry.title %></h3>
                <p><%= entry.description %></p>
                <p><strong>Language:</strong> <span class="language-tag"><%= entry.language %></span></p>
                <button onclick="deleteEntry('<%= entry.title %>'); event.stopPropagation();">Delete</button>
            </div>
        <% }); %>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <script>
        function deleteEntry(entryId) {
            if (confirm('Are you sure you want to delete this entry?')) {
                fetch('/delete?key=' + entryId, {
                    method: 'DELETE'
                })
            }
        }
    </script>
</body>
</html>
